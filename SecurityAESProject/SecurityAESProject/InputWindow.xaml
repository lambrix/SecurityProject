<Window x:Class="SecurityAESProject.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecurityAESProject"
        mc:Ignorable="d"
        Title="InputWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="nextScreenButton" Content="Next" HorizontalAlignment="Left" Margin="341,219,0,0" VerticalAlignment="Top" Width="61" Click="nextButtonClick" Height="34"/>
        <RadioButton x:Name="radioButton" Content="Encrypt" HorizontalAlignment="Left" Margin="341,98,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="encryptRB" GroupName="crypt" Content="Encrypt" HorizontalAlignment="Left" Margin="341,98,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="decryptRB" GroupName="crypt" Content="Decrypt" HorizontalAlignment="Left" Margin="341,135,0,0" VerticalAlignment="Top" />
        <Button x:Name="openDialogButton" Content="Open" HorizontalAlignment="Left" Margin="286,219,0,0" VerticalAlignment="Top" Width="41" Click="opendialogButtonClick" Height="34"/>
        <Label x:Name="pathLabel" BorderBrush="Black" BorderThickness="1px" Content="Path:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="107,219,0,0" Width="179" Height="34" FontSize="9.333" RenderTransformOrigin="0.5,0.5"/>
        <ListView x:Name="DropList" Drop="DropList_Drop" DragEnter="DropList_DragEnter" AllowDrop="True" HorizontalAlignment="Left" Height="161" Margin="107,58,0,0"  VerticalAlignment="Top" Width="220" />
        <Label x:Name="nameLabel" Content="" HorizontalAlignment="Left" Margin="211,27,0,0" VerticalAlignment="Top" Width="116"/>

    </Grid>
</Window>
