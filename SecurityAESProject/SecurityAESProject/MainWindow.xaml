<Window x:Class="SecurityAESProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecurityAESProject"
        mc:Ignorable="d"
        Title="Main Log in Window" Height="350" Width="525">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="116" Stroke="Black" VerticalAlignment="Center" Width="334"></Rectangle>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="23" Margin="-100,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Label x:Name="label" Content="Log in!" HorizontalAlignment="Center"  Margin="0,-150,0,0" VerticalAlignment="Center" BorderThickness="2" BorderBrush="Black"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Center" Margin="100,0,0,0" VerticalAlignment="Center" Width="75" Click="button_Click"/>
    </Grid>
</Window>
